<%- include('../partials/header') %>

<div class="container mt-5">
  <h2 class="mb-4">Editar Funcionário</h2>

  <div class="card shadow-sm">
    <div class="card-body">
      <form action="/employee/<%= employee._id %>/edit" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control" value="<%= employee.username %>" required>
        </div>
        <div class="mb-3">
          <label for="nomeCompleto" class="form-label">Nome Completo</label>
          <input type="text" name="nomeCompleto" id="nomeCompleto" class="form-control" value="<%= employee.nomeCompleto %>">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control" value="<%= employee.email %>" required>
        </div>
        <div class="mb-3">
          <label for="telefone" class="form-label">Telefone</label>
          <input type="text" name="telefone" id="telefone" class="form-control" value="<%= employee.telefone %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Restaurantes atribuídos</label>
          <div class="form-check-group">
            <% restaurantesCriados.forEach(rest => { %>
              <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" 
                       name="restaurants" value="<%= rest._id %>" 
                       id="rest-<%= rest._id %>"
                       <%= employee.restaurants.some(r => r._id.toString() === rest._id.toString()) ? 'checked' : '' %>>
                <label class="form-check-label" for="rest-<%= rest._id %>">
                  <%= rest.name %> — <small class="text-muted"><%= rest.location %></small>
                </label>
              </div>
            <% }) %>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar Alterações</button>
        <a href="/employee/<%= employee._id %>/edit" class="btn btn-secondary ms-2">Cancelar</a>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
