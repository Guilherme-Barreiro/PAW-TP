<%- include('../partials/header') %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4">Recuperar Palavra-Passe</h2>

  <% if (error) { %>
    <div class="alert alert-danger text-center"><%= error %></div>
  <% } %>

  <form action="/user/forgot-password" method="POST">
    <input type="hidden" name="showForm" value="<%= showForm %>">
    
    <div class="mb-3">
      <label class="form-label">Nome de Utilizador</label>
      <input type="text" name="username" class="form-control" required value="<%= username %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" name="email" class="form-control" required value="<%= email %>">
    </div>

    <% if (showForm) { %>
      <div class="mb-3">
        <label class="form-label">Nova Palavra-Passe</label>
        <input type="password" name="novaSenha" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Confirmar Nova Palavra-Passe</label>
        <input type="password" name="confirmarSenha" class="form-control" required>
      </div>
    <% } %>

    <button type="submit" class="btn btn-primary w-100">
      <%= showForm ? 'Atualizar Palavra-Passe' : 'Verificar Conta' %>
    </button>
  </form>

  <div class="text-center mt-3">
    <a href="/user/login">‚Üê Voltar ao Login</a>
  </div>
</div>

<%- include('../partials/footer') %>
