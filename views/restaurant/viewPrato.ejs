<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="card shadow p-4">
    <div class="row">
      <div class="col-md-6">
        <% if (prato.image) { %>
          <img src="/images/pratos/<%= prato.image %>" alt="<%= prato.name %>" class="img-fluid rounded">
        <% } else { %>
          <span class="text-muted">Sem imagem</span>
        <% } %>
      </div>
      <div class="col-md-6">
        <h2><%= prato.name %></h2>
        <p><strong>Categoria:</strong> <%= prato.category %></p>
        <p><strong>Descrição:</strong> <%= prato.description %></p>

        <p><strong>Informação Nutricional:</strong> <%= prato.nutrition || '-' %></p>

        <p><strong>Preço Meia Dose:</strong> €<%= prato.price?.meia?.toFixed(2) %></p>
        <p><strong>Preço 1 Dose:</strong> €<%= prato.price?.inteira?.toFixed(2) %></p>

        <a href="/restaurants/<%= restauranteId %>/manage" class="btn btn-outline-secondary mt-3">← Voltar</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
