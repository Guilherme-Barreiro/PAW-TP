<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Adicionar Prato a <%= restaurante.name %></h1>

  <form action="/restaurants/<%= restaurante._id %>/add-menu" method="POST" enctype="multipart/form-data" class="card p-4 shadow-sm mx-auto" style="max-width: 600px;">
    <div class="mb-3">
      <label for="name" class="form-label">Nome do prato</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Categoria</label>
      <input type="text" class="form-control" id="category" name="category" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Descrição</label>
      <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Imagem do prato</label>
      <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
    </div>

    <div class="mb-3">
      <label for="nutrition" class="form-label">Informação Nutricional</label>
      <input type="text" class="form-control" id="nutrition" name="nutrition">
    </div>

    <div class="mb-3">
      <label class="form-label">Preços por dose (€)</label>
      <div class="input-group mb-2">
        <span class="input-group-text">Pequena</span>
        <input type="number" step="0.01" min="0" name="pequena" id="pricePequena" class="form-control" required>
      </div>
      <div class="input-group mb-2">
        <span class="input-group-text">Média</span>
        <input type="number" step="0.01" min="0" name="media" id="priceMedia" class="form-control" required>
      </div>
      <div class="input-group">
        <span class="input-group-text">Grande</span>
        <input type="number" step="0.01" min="0" name="grande" id="priceGrande" class="form-control" required>
      </div>
    </div>

    <button type="submit" class="btn btn-success w-100">Adicionar Prato</button>
  </form>

  <div class="text-center mt-3">
    <a href="/restaurants/list" class="text-decoration-none">← Voltar</a>
  </div>
</div>

<script>
  const form = document.querySelector('form');
  form.addEventListener('submit', function (e) {
    const p = parseFloat(document.getElementById('pricePequena').value);
    const m = parseFloat(document.getElementById('priceMedia').value);
    const g = parseFloat(document.getElementById('priceGrande').value);

    if (p < 0 || m < 0 || g < 0) {
      e.preventDefault();
      alert('Os preços não podem ser negativos.');
    }
  });
</script>

<%- include('partials/footer') %>