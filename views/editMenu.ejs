<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Editar Prato</h1>

  <form action="/restaurants/<%= restauranteId %>/edit-menu/<%= pratoIndex %>" method="POST" enctype="multipart/form-data" class="card p-4 shadow-sm mx-auto" style="max-width: 600px;">
    <div class="mb-3">
      <label for="name" class="form-label">Nome do prato</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= prato.name %>" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Categoria</label>
      <select class="form-select" id="category" name="category" required>
        <option disabled value="">Escolhe uma categoria</option>
        <option value="Carne" <%= prato.category === 'Carne' ? 'selected' : '' %>>Carne</option>
        <option value="Peixe" <%= prato.category === 'Peixe' ? 'selected' : '' %>>Peixe</option>
        <option value="Vegetariano" <%= prato.category === 'Vegetariano' ? 'selected' : '' %>>Vegetariano</option>
        <option value="Sobremesa" <%= prato.category === 'Sobremesa' ? 'selected' : '' %>>Sobremesa</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Descrição</label>
      <textarea class="form-control" id="description" name="description" rows="3" required><%= prato.description %></textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Imagem atual:</label><br>
      <% if (prato.image) { %>
        <img src="/images/pratos/<%= prato.image %>" alt="<%= prato.name %>" width="100" class="img-thumbnail mb-2">
      <% } else { %>
        <span class="text-muted">Sem imagem</span>
      <% } %>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Alterar Imagem</label>
      <input type="file" class="form-control" id="image" name="image" accept="image/*">
    </div>

    <div class="mb-3">
      <label for="nutrition" class="form-label">Informação Nutricional</label>
      <input type="text" class="form-control" id="nutrition" name="nutrition" value="<%= prato.nutrition %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Preços por dose (€)</label>
      <div class="input-group mb-2">
        <span class="input-group-text">Meia Dose</span>
        <input type="number" step="0.01" min="0" name="meia" id="priceMeia" class="form-control" value="<%= prato.price?.meia || '' %>" required>
      </div>
      <div class="input-group mb-2">
        <span class="input-group-text">1 Dose</span>
        <input type="number" step="0.01" min="0" name="inteira" id="priceInteira" class="form-control" value="<%= prato.price?.inteira || '' %>" required>
      </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">Guardar Alterações</button>
  </form>

  <div class="text-center mt-3">
    <a href="/restaurants/<%= restauranteId %>/manage" class="text-decoration-none">← Voltar</a>
  </div>
</div>

<script>
  const form = document.querySelector('form');
  form.addEventListener('submit', function (e) {
    const meia = parseFloat(document.getElementById('priceMeia').value);
    const inteira = parseFloat(document.getElementById('priceInteira').value);

    if (meia < 0 || inteira < 0) {
      e.preventDefault();
      alert('Os preços não podem ser negativos.');
      return;
    }

    if (meia > inteira) {
      e.preventDefault();
      alert('A meia dose não pode ser mais cara que a dose inteira.');
    }
  });
</script>

<%- include('partials/footer') %>
