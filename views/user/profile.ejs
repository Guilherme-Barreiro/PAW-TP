<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row">
    <!-- Cart√£o de Perfil -->
    <div class="col-md-6">
      <div class="card shadow-lg mb-4">
        <div class="card-header bg-dark text-white">
          <h4 class="mb-0">Perfil do Utilizador</h4>
        </div>
        <div class="card-body">
          <p><strong>Nome de Utilizador:</strong> <%= user.username %></p>
          <p><strong>Nome Completo:</strong> <%= user.nomeCompleto %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Morada:</strong> <%= user.morada %></p>
          <p><strong>Telefone:</strong> <%= user.telefone %></p>
          <p><strong>NIF:</strong> <%= user.nif %></p>
          <p><strong>Data de Nascimento:</strong> <%= new Date(user.dataNascimento).toLocaleDateString() %></p>
          <p><strong>Tipo de Conta:</strong> <span class="badge bg-secondary"><%= user.role %></span></p>
        </div>
      </div>
    </div>

    <% if (user.role !== 'admin') { %>
      <!-- Cart√£o de Restaurantes Criados -->
      <div class="col-md-6">
        <div class="card shadow-lg mb-4">
          <div class="card-header bg-success text-white">
            <h4 class="mb-0">Restaurantes Criados</h4>
          </div>
          <div class="card-body">
            <% if (user.restaurantesCriados && user.restaurantesCriados.length > 0) { %>
              <ul class="list-group">
                <% user.restaurantesCriados.forEach(rest => { %>
                  <li class="list-group-item">
                    <strong><%= rest.name %></strong><br>
                    <small><strong>Email:</strong> <%= rest.email %></small><br>
                    <small><strong>Localiza√ß√£o:</strong> <%= rest.location %></small><br>
                    <% if (rest.status === 'validado') { %>
                      <span class="badge bg-success mt-1">Validado</span>
                    <% } else if (rest.status === 'pendente') { %>
                      <span class="badge bg-warning text-dark mt-1">Pendente</span>
                    <% } %>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-muted">Ainda n√£o criaste nenhum restaurante.</p>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <% if (user.role !== 'admin') { %>
    <!-- Cart√£o: Hist√≥rico de Encomendas -->
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-lg">
          <div class="card-header text-white" style="background-color: #0d6efd;">
            <h4 class="mb-0">üì¶ Hist√≥rico de Encomendas</h4>
          </div>
          <div class="card-body">
            <% if (user.historicoEncomendas && user.historicoEncomendas.length > 0) { %>
              <ul class="list-group">
                <% user.historicoEncomendas.forEach(encomenda => { %>
                  <li class="list-group-item">Encomenda #<%= encomenda %></li>
                <% }) %>
              </ul>
            <% } else { %>
              <p class="text-muted">Sem encomendas registadas.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <% if (user.role === 'admin') { %>
    <div class="row mt-4">
      <div class="col-md-12">
        <div class="card shadow-lg">
          <div class="card-header text-white" style="background-color: #6c757d;">
            <h4 class="mb-0">Vis√£o de Administrador</h4>
          </div>
          <div class="card-body d-flex flex-wrap gap-2">
            <a href="/admin/dashboard" class="btn btn-outline-primary">Dashboard</a>
            <a href="/admin/validar" class="btn btn-outline-danger">Validar Restaurantes</a>
            <a href="/users/manage" class="btn btn-outline-secondary">Gerir Utilizadores</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <div class="d-flex justify-content-between mt-4">
    <div>
      <a href="/user/profile/edit" class="btn btn-warning">
        <i class="fas fa-edit me-1"></i> Editar Perfil
      </a>
      <% if (user.role !== 'admin') { %>
        <a href="/restaurants/register" class="btn btn-success ms-2">
          <i class="fas fa-plus me-1"></i> Criar Restaurante
        </a>
      <% } %>
    </div>
    <div>
      <a href="/" class="btn btn-outline-primary">&larr; Voltar ao in√≠cio</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
