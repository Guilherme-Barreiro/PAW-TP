<%- include('partials/header') %>

<h1 class="text-center">Registar Conta</h1>

<% if (error) { %>
  <div class="alert alert-danger text-center"><%= error %></div>
<% } %>

<div class="container">
  <main class="form-signin text-center mx-auto" style="max-width: 400px;">
    <form action="/register" method="POST">
      <input type="text" class="form-control mb-2" name="username" placeholder="Novo utilizador" required>
      <input type="password" class="form-control mb-2" name="password" placeholder="Nova senha" required>
      <button class="btn btn-success w-100" type="submit">Criar Conta</button>
    </form>

    <p class="mt-3">JÃ¡ tens conta? <a href="/login">Faz login</a></p>
  </main>
</div>

