<%- include('partials/header') %>

<div class="container mt-5">
  <div class="card shadow-lg mx-auto" style="max-width: 800px;">
    <div class="row g-0">
      <div class="col-md-5">
        <img src="/images/pratos/<%= prato.image %>" alt="<%= prato.name %>" class="img-fluid rounded-start" style="object-fit: cover; height: 100%;">
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h3 class="card-title"><%= prato.name %></h3>
          <p class="card-text"><strong>Categoria:</strong> <%= prato.category %></p>
          <p class="card-text"><strong>Descrição:</strong> <%= prato.description %></p>
          <p class="card-text"><strong>Nutrição:</strong> <%= prato.nutrition %></p>
          <p class="card-text"><strong>Preço Meia Dose:</strong> €<%= prato.price?.meia?.toFixed(2) || 'N/A' %></p>
          <p class="card-text"><strong>Preço 1 Dose:</strong> €<%= prato.price?.inteira?.toFixed(2) || 'N/A' %></p>

          <hr>
          <div class="mb-3">
            <label for="doseSelect" class="form-label"><strong>Escolher Dose:</strong></label>
            <select id="doseSelect" class="form-select" onchange="calcularPessoas()">
              <option value="0.5">Meia Dose</option>
              <option value="1">1 Dose</option>
              <option value="2">2 Doses</option>
              <option value="3">3 Doses</option>
              <option value="4">4 Doses</option>
            </select>
          </div>

          <p id="doseResult" class="fw-bold">Serve aproximadamente 1 pessoa.</p>

          <a href="/restaurants/<%= restauranteId %>/manage" class="btn btn-outline-secondary mt-3">← Voltar</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function calcularPessoas() {
    const dose = parseFloat(document.getElementById('doseSelect').value);
    const pessoas = dose * 2;
    const resultText = `Serve aproximadamente ${pessoas} pessoa${pessoas > 1 ? 's' : ''}.`;
    document.getElementById('doseResult').innerText = resultText;
  }
  window.addEventListener('DOMContentLoaded', calcularPessoas);
</script>

<%- include('partials/footer') %>
