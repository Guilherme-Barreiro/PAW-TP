<%- include('partials/header') %>

<h1 class="text-center">Login</h1>

<% if (showError && error) { %>
  <div class="alert alert-danger text-center"><%= error %></div>
<% } %>

<div class="container">
  <main class="form-signin text-center mx-auto" style="max-width: 400px;">
    <form action="/login" method="POST">
      <h2 class="mb-3">Entrar</h2>
      <input type="text" class="form-control mb-2" name="username" placeholder="Utilizador" required>
      <input type="password" class="form-control mb-2" name="password" placeholder="Senha" required>
      <button class="btn btn-primary w-100" type="submit">Login</button>
    </form>

    <p class="mt-3">Ainda n√£o tens conta? <a href="/register">Regista-te aqui</a></p>
  </main>
</div>

<%- include('partials/footer') %>
